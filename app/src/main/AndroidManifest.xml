<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kerjainprojectduplicate">

    <application
        android:name=".KerjainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KerjainProjectDuplicate">
        <activity
            android:name="com.example.kerjainprojectduplicate.TaskDetailActivity"
            android:label="Detail"
            android:parentActivityName="com.example.kerjainprojectduplicate.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kerjainprojectduplicate.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.kerjainprojectduplicate.AddTaskActivity"
            android:label="Tambah Tugas"
            android:parentActivityName="com.example.kerjainprojectduplicate.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kerjainprojectduplicate.MainActivity"/>
            <intent-filter>
                <action android:name="com.example.kerjainprojectduplicate.AddTaskActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kerjainprojectduplicate.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.KerjainProjectDuplicate.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>